
<section role="reportes">
<% @rest.each do |reporte| %>
<% @id = reporte["id"] %>
    <a href="/reporte/<%= @id %>">
    <div class="contReportes">
        <div class="imgGrande" style="background-image:url('http://corruptly.herokuapp.com/reports/file/<%= @id %>'), url('https://www.sined.mx/sined/lib/js/cargando.gif')"></div>
        <div class="info">
            <header>
                <div class="imagePerfil" style="background-image:url('http://lorempixel.com/80/80')"></div>
                <div class="infope">
                    <hgroup>
                        <h1 class="tituloPerfil"><%= reporte["description"] %></h1>
                    </hgroup>
                    <p><strong><i class="icon-user"></i> Reportado por: </strong> anonimo</p>
            <p><strong><i class="icon-map-marker"></i> Ubicacion: </strong> <%= JSON.parse(reporte["location"])["address"] %></p>
                </div>
            </header>
            
        </div>
        <hr class="sepReport">
        <div class="contLikes">
            <div class="likes">
                <img src="http://lorempixel.com/48/48" alt="">
                <img src="http://lorempixel.com/48/48" alt="">
                <img src="http://lorempixel.com/48/48" alt="">
                <img src="http://lorempixel.com/48/48" alt="">
                <img src="http://lorempixel.com/48/48" alt="">
            </div>
            <div class="cantLikes">
                <p><i class="icon-thumbs-up icon-white"></i> 1.000</p>
            </div>
        </div>
    </div>
    </a>
    <% end %>

</section>

<aside>
    <div class="filtros">
        <ul>
            <li><p>Candidatos <i class="icon-plus icon-white"></i></p>
            </li>
            <li><p>Mas populares <i class="icon-plus icon-white"></i></p></li>
            <li><p>Ubicacion <i class="icon-plus icon-white"></i></p></li>
        </ul>
    </div>
    <div id="mapaGoogle">
        <iframe width="270" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.es/maps?f=q&amp;source=s_q&amp;hl=es&amp;geocode=&amp;q=colombia&amp;aq=&amp;sll=40.396764,-3.713379&amp;sspn=12.491677,29.465332&amp;ie=UTF8&amp;hq=&amp;hnear=Colombia&amp;ll=4.570868,-74.297333&amp;spn=8.177274,14.732666&amp;t=m&amp;z=7&amp;output=embed"></iframe>
    </div>
</aside>
